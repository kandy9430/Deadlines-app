<%- layout('./layouts/boilerplate') %> 

<div class="row justify-content-center">
  <div class="col-10 col-md-8">
    <section class="card">
      <h1 class="card-header"><%= expiration.document.name %></h1>
      <div class="card-body">
        <p class="card-text"><%= expiration.document.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Expires: </li>
        <li class="list-group-item fw-bold <%= expiration.daysUntilDue <= 180 ? 'text-danger' : 'text-body'%> "><%= expiration.formattedExpires %> - <a href="/deadlines/document/<%= expiration._id %>/edit">Update</a></li>
        <li class="list-group-item"><a href="<%= expiration.document.website %> " target="_blank" rel="noopener noreferrer">Renew</a></li>
        <li class="list-group-item text-muted">
          <% for(let category of expiration.document.category) { %> 
            <span class="badge bg-secondary"><%= category.name %></span>
            <% } %>
        </li>
      </ul>
      <div class="card-body">
        <form method="POST" action="/deadlines/document/<%= expiration._id %>?_method=DELETE ">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </section>
    <a href="/deadlines">Back</a>
  </div>
</div>


