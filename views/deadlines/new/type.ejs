<%- layout('./layouts/boilerplate') %> 
<div class="row justify-content-center">
  <div class="col-10 col-md-8 col-lg-6">
    <section class="card">
      <h1 class="card-header">New Deadline</h1>
      <form class="card-body" action="/deadlines/new/type" method="POST">
        <h2 class="fs-4 mb-3">First, select what type of deadline this is:</h2>
        <div class="form-check mb-3">
          <input class="form-check-input" type="radio" name="type" id="document" value="document" checked>
          <label class="form-check-label" for="document">
            Documents. This would include things like a driver's license, passport, or anything with an expiration date.
          </label>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="radio" name="type" id="recurring" value="recurring">
          <label class="form-check-label" for="recurring">
            Recurring. This would include monthly payments like rent, bills, or any recurring deadline.
          </label>
        </div>
        <div class="d-grid col-6 mx-auto">
          <button class="btn btn-success">Continue</button>
        </div>
      </form>
      <div class="card-footer">
        <a class="col-2" href="/deadlines">Cancel</a>
      </div>
    </section>
  </div>
</div>


